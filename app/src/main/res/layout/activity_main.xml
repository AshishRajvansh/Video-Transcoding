<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTranscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transcode"
        app:layout_constraintBottom_toTopOf="@+id/btnTranscode2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_chainStyle="packed" />


    <Button
        android:id="@+id/btnTranscode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Metadata"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTranscode" />

</androidx.constraintlayout.widget.ConstraintLayout>